@model IEnumerable<MVCExam.Web.ViewModels.TicketTopCommentedViewModel>
@{
    ViewBag.Title = "Home";
    int ticketsCount = Model.Count();
}
<div class="row-fluid">
    @for (int i = 0; i < ticketsCount; i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title</h2>
            <p><strong>Category:</strong> <span>@ticket.CategoryName</span></p>
            <p><strong>Author:</strong> <span>@ticket.AuthorName</span></p>
            <p>@ticket.CommentsCount comment(s)</p>
            <p>@Html.ActionLink("More Details", "Details", "Tickets", new { ticket.Id }, new { @class = "btn" })</p>
        </div>
        
        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
            @:<div class="row-fluid">
        }
    }
</div>
