@model MVCExam.Web.Areas.Administration.ViewModels.CommentAdminViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "CommentsAdmin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)

    <div class="control-group">
        @Html.LabelFor(model => model.Content, new { @class = "control-label" })
        <div class="controls">
            @Html.EditorFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content, null, new { @class = "help-inline" })
        </div>
    </div>

    <div class="form-actions no-color">
        <input type="submit" value="Save" class="btn" />
    </div>  
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>

